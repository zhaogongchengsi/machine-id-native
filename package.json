{
  "name": "@holix/machine-id-native",
  "version": "0.0.1",
  "description": "A native Node.js addon to retrieve unique machine identifiers and hardware fingerprints across different platforms (Windows, macOS, Linux). Provides multiple methods including Machine GUID, BIOS UUID, IOPlatform UUID, and more.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "build/Release/*.node",
    "src",
    "binding.gyp"
  ],
  "scripts": {
    "build:node": "node-gyp rebuild",
    "build:ts": "tsdown",
    "build": "node-gyp rebuild && tsdown",
    "configure": "node-gyp configure",
    "clean": "node-gyp clean && rm -rf dist",
    "test": "pnpm run test:cjs && pnpm run test:esm",
    "test:cjs": "node --test test/*.test.cjs",
    "test:esm": "node --test test/*.test.mjs",
    "benchmark": "node test/benchmark.mjs",
    "install": "node-gyp rebuild || echo 'Native build failed, but installation can continue'",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "release": "pnpm run build && pnpm publish --access public",
    "release:beta": "pnpm run build && pnpm publish --access public --tag beta",
    "release:dry": "pnpm run build && pnpm publish --dry-run --no-git-checks",
    "release:force": "pnpm run build && pnpm publish --access public --no-git-checks"
  },
  "binary": {
    "module_name": "machine_id_native",
    "module_path": "./build/Release/",
    "host": "https://github.com/zhaogongchengsi/machine-id-native/releases/download/"
  },
  "keywords": [
    "machine-id",
    "device-id",
    "hardware-id",
    "uuid",
    "native",
    "addon",
    "napi",
    "cross-platform",
    "fingerprint",
    "machine-identifier",
    "electron",
    "electron-compatible",
    "node-gyp",
    "hardware-fingerprint",
    "bios-uuid",
    "machine-guid",
    "ioplatform",
    "system-id",
    "device-fingerprint"
  ],
  "author": "zhaozunhong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhaogongchengsi/machine-id-native.git"
  },
  "bugs": {
    "url": "https://github.com/zhaogongchengsi/machine-id-native/issues"
  },
  "homepage": "https://github.com/zhaogongchengsi/machine-id-native#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.5.0",
    "tsdown": "^0.16.0",
    "typescript": "^5.9.3"
  }
}
